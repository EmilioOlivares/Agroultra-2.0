    /**/

    ViewBag.Title = "Registro_Asistencia";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 text-center">
            <p><a class="btn btn-primary btn-xl" href="/Home/Menu_Opciones">Volver al Menu &raquo;</a></p>
        </div>
    </div>
</div>
<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 card shadow mb-4">
                <div class="card-header py-3 align-middle">
                    <div class="row text-primary">
                        <img src="~/Content/img/usuarios.svg" alt="Control" style="width:auto; height:25px; padding: 0px 6px " />
                        <h4 class="m-0 font-weight-bold text-primary">Ingresar Inasistencia</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/action_page.php">
                        <fieldset>
                            <table style="width:100%">
                                <tr>
                                    <th>Rut:</th>
                                </tr>
                                <tr>
                                    <td><input type="text" required></td>

                                </tr>
                                <tr>
                                    <th>Código:</th>
                                </tr>
                                <tr>
                                    <td><input type="text" required></td>
                                </tr>

                                <tr>
                                    <th>Motivo:</th>
                                </tr>
                                <tr>
                                    <td><textarea name="mensaje"></textarea></td>
                                </tr>

                            </table>

                            <p><a class="btn btn-warning btn-lg" onclick="alert('Registrado')" href="">Ingresar&raquo;</a></p>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

