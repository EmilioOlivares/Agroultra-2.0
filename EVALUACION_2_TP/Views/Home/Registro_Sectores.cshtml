@{
    ViewBag.Title = "Registro_Sectores";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 text-center">
            <p><a class="btn btn-primary btn-xl" href="/Home/Menu_Opciones">Volver al Menu &raquo;</a></p>
        </div>
    </div>
</div>
<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 card shadow mb-4">
                <div class="card-header py-3 align-middle">
                    <div class="row text-primary">
                        <img src="~/Content/img/usuarios.svg" alt="Control" style="width:auto; height:25px; padding: 0px 6px " />
                        <h4 class="m-0 font-weight-bold text-primary">Ingreso Sector</h4>
                    </div>
                </div>
                <div class="card-body">
                    <fieldset>
                        <table style="width:100%">
                            <tr align='center'>
                                <td align='center'>
                                    Identificador:
                                    <input type="text">
                                </td>

                                <td align='center'>
                                    <label for="name">Fruto:</label>
                                    <select name="select">
                                        <option value="Value1">Fresa</option>
                                        <option value="value2" selected>Arándano</option>
                                        <option value="Value1">Mora</option>
                                    </select>
                                </td>

                                <td align='center'>
                                    Designación:
                                    <input type="text">
                                </td>

                            </tr>
                            <tr>
                                <td align='center' colspan="3"><hr /></td>
                            </tr>
                            <tr align='center'>
                                <td align='left' colspan="3">
                                    <p><a class="btn btn-warning btn-lg" onclick="alert('Sector Registrado')" href="">Ingresar &raquo;</a></p>
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</section>